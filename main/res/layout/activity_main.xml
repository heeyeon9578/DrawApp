<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점 크기 +"
            android:background="@drawable/solid_button"
            android:onClick="increaseValue"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="decreaseValue"
            android:background="@drawable/solid_button"
            android:text="점 크기 -"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#FF0000"
            android:onClick="setRed"
            android:text="빨강" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#0048FF"
            android:onClick="setBlue"
            android:text="파랑" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#FFEB3B"
            android:onClick="setYellow"
            android:text="노랑" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#50FA61"
            android:onClick="setGreen"
            android:text="녹색" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#000000"
            android:onClick="setBlack"
            android:text="검정"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#DA29A8"
            android:onClick="setMagenta"
            android:text="마젠타" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:backgroundTint="#00FFF7"
            android:onClick="setCyan"
            android:text="시안" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_button"
            android:onClick="setWhite"
            android:text="지우기"/>

    </LinearLayout>

    <com.example.mathgraphic.MyView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


</LinearLayout>